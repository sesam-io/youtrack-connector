{
  "_id": "{{@ system @}}",
  "headers": {
    "Authorization": "Bearer $SECRET(api_key)"
  },
  "operations": {
    "projects-list": {
      "id_expression": "{{ id }}",
      "method": "GET",
      "params": {
        "fields": "id,name,shortName"
      },
      "url": "admin/projects"
    },
    "users-list": {
      "id_expression": "{{ id }}",
      "method": "GET",
      "params": {
        "fields": "id,avatarUrl,banned,email,fullName,guest,jabberAccountName,login,online,profiles(id),ringId,savedQueries(id),tags(id)"
      },
      "url": "users"
    },
    "issues-list": {
      "id_expression": "{{ id }}",
      "method": "GET",
      "params": {
        "fields": "id,attachments(id),comments,commentsCount,created,customFields(id,name,projectCustomField(field(id,name),id),value(name)),description,draftOwner,externalIssue,isDraft,numberInProject,parent(issues(id), linkType(aggregation,directed,localizedName,localizedSourceToTarget,name,readOnly,sourceToTarget,targetToSource),trimmedIssues),project(id),reporter(id),resolved,subtasks(id),summary,updated,updater(id),usesMarkdown,visibility(id),voters(id),watchers(id),wikifiedDescription"
      },
      "url": "issues"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://{{@ subdomain @}}.youtrack.cloud/api/%s",
  "verify_ssl": true
}
